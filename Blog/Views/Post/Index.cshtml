@model List<Blog.Models.Post>;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a href="/Post/Novo">Cadastrar Novo Post</a>
    </p>
    <table>
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Resumo</th>
                <th>Categoria</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Titulo</td>
                    <td>@p.Resumo</td>
                    <td>@p.Categoria</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
