@model List<Blog.Models.Post>;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a href="/Post/Novo">Cadastrar Novo Post</a>
    </p>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Resumo</th>
                <th>Categoria</th>
                <th>Publicação?</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td><a href="/Post/Visualiza/@p.Id">@p.Titulo</a></td>
                    <td>@p.Resumo</td>
                    <td>@p.Categoria</td>
                    <td>
                        @if(p.Publicado)
                        {
                            @Html.Raw($"{p.DataPublicacao:dd/MM/yyyy}");
                        }
                        else
                        {
                            @Html.Raw("Não");
                        }
                    </td>
                    <td><a href="/Post/RemovePost/@p.Id">Remover</a></td>
                    <td><a href="/Post/PublicaPost/@p.Id">Publicar</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
